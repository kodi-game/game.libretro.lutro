<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.lutro"
		name="Lua Engine (Lutro)"
		version="0.0.1.37"
		provider-name="Higor Euripedes/Jean-Andre Santoni">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.default" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>LUA</platforms>
		<extensions>lutro|lua</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>false</requires_opengl>
	</extension>
