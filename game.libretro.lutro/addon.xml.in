<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.lutro"
		name="Lua Engine (Lutro)"
		version="0.0.1.24"
		provider-name="Higor Euripedes/Jean-Andre Santoni">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.default" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>LUA</platforms>
		<extensions>lutro|lua</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>false</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>MIT</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.lutro</source>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
		<summary lang="en_GB">Lua Engine (Lutro) 0.0.1</summary>
		<description lang="da_DK">Lutro er en eksperimentel Lua-spilramme til libretro inspireret af LÖVE.</description>
		<description lang="en_GB">Lutro is an experimental Lua game framework for libretro inspired by LÖVE.</description>
		<description lang="it_IT">Lutro è un framework di gioco Lua sperimentale per libretro ispirato a LÖVE.</description>
		<description lang="ko_KR">Lutro는 LÖVE에서 영감을 받은 libretro용 실험적인 Lua 게임 프레임워크입니다.</description>
		<description lang="zh_CN">Lutro 是 Librector 的一个实验性 Lua 游戏框架，灵感来自LÖVE。</description>
	</extension>
</addon>
